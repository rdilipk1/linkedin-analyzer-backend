# LinkedIn API Credentials
# Get these from your app settings on the LinkedIn Developer Portal
LINKEDIN_CLIENT_ID=your_client_id_from_linkedin_developer_portal
LINKEDIN_CLIENT_SECRET=your_client_secret_from_linkedin_developer_portal

# Database Credentials (for your shared hosting MySQL database)
# Make sure your host allows remote connections (e.g., from a wildcard '%')
DB_HOST=your_database_hostname_or_ip
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Application URLs
# The full URL of your deployed frontend app (e.g., from Google Cloud)
FRONTEND_URL=https://your-frontend-app-url.aistudio.dev
# The full URL of this backend service (provided by Render)
BACKEND_URL=https://your-backend-name.onrender.com

# Port for the server (Render sets this automatically, but this is used for local development)
PORT=3001
